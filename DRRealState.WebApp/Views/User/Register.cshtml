@using DRRealState.Core.Application.ViewModel.User
@model SaveUserViewModel
@{
    ViewBag.Title= "Register";
}

<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
  <symbol id="check-circle-fill" viewBox="0 0 16 16">
    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
  </symbol>
  <symbol id="info-fill" viewBox="0 0 16 16">
    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
  </symbol>
  <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
  </symbol>
</svg>

	<img class="wave" src="~/imagenes/wave.png">
	<div class="container">
		<div class="img">
			<img src="~/imagenes/bg.svg">
		</div>
		<div class="login-content ">
			<form asp-action="Register" asp-controller="User" enctype="multipart/form-data">
				<img src="~/imagenes/avatar.svg">
                
             @if(Model.HasError){   
            <div class="alert alert-danger d-flex align-items-center mb-3" style="max-height:60px;" role="alert">
              <svg class="bi flex-shrink-0 me-2" style="width:16px!important;" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
              <div>
                @Model.Error
              </div>
            </div>
             }
				<h2 class="title">Register</h2>

                <div class="container-fluid ">

                    <div class="row">
                        <div class="col input-div one me-2">
                            <div class="i">
                                <i class="fas fa-user"></i>
                            </div>

                            <div class="div">
                                <h5>Name</h5>
                                <input asp-for="Name" class="input">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col input-div one ">
                            <div class="i">
                                <i class="fas fa-user"></i>
                            </div>

                            <div class="div">
                                <h5>Lastname</h5>
                                <input asp-for="LastName" class="input">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col input-div one me-2">
                            <div class="i">
                                <i class="fas fa-phone"></i>
                            </div>

                            <div class="div">
                                <h5>Phone Number</h5>
                                <input asp-for="Phone" class="input" required>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col input-div one ">
                            <div class="i">
                                <i class="fas fa-envelope"></i>
                            </div>

                            <div class="div">
                                <h5>Email Address</h5>
                                <input asp-for="Email" class="input">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col input-div one me-2">
                            <div class="i">
                                <i class="fas fa-user"></i>
                            </div>

                            <div class="div">
                                <h5>Username</h5>
                                <input asp-for="Username" class="input">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col ">


                            <div class="div mt-3">

                                <input asp-for="Photo" class="form-control" required>
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col input-div one me-2">
                            <div class="i">
                                <i class="fas fa-lock"></i>
                            </div>

                            <div class="div">
                                <h5>Password</h5>
                                <input asp-for="Password" class="input">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col input-div one ">
                            <div class="i">
                                <i class="fas fa-lock"></i>
                            </div>

                            <div class="div">
                                <h5>Confirm Password</h5>
                                <input asp-for="ConfirmPassword" class="input">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">

                        <div class="col">
                            <select class="form-select" asp-for="UserType">
                                <option value="" selected>Select an User Type</option>
                                <option value="1">Client</option>
                                <option value="2">Agent</option>
                            </select>
                            <span asp-validation-for="UserType" class="text-danger"></span>
                        </div>

                    </div>


                </div>
            	
            	<input type="submit" class="btn btn-block text-white" value="Login">
            </form>
        </div>
    </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.mask.min.js"></script>
<script>
    $(document).ready(() => {

        $("#Phone").mask("+1 000 000 0000");

    });

</script>