@using DRRealState.Core.Application.ViewModel.User
@model SaveUserViewModel
@{
    ViewBag.Title= "Register";
}

	<img class="wave" src="~/imagenes/wave.png">
	<div class="container">
		<div class="img">
			<img src="~/imagenes/bg.svg">
		</div>
		<div class="login-content ">
			<form asp-action="Register" asp-controller="User" enctype="multipart/form-data">
				<img src="~/imagenes/avatar.svg">
				<h2 class="title">Register</h2>

                <div class="container-fluid ">

                    <div class="row">
                        <div class="col input-div one me-2">
                            <div class="i">
                                <i class="fas fa-user"></i>
                            </div>

                            <div class="div">
                                <h5>Name</h5>
                                <input asp-for="Name" class="input">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col input-div one ">
                            <div class="i">
                                <i class="fas fa-user"></i>
                            </div>

                            <div class="div">
                                <h5>Lastname</h5>
                                <input asp-for="LastName" class="input">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col input-div one me-2">
                            <div class="i">
                                <i class="fas fa-phone"></i>
                            </div>

                            <div class="div">
                                <h5>Phone Number</h5>
                                <input asp-for="Phone" class="input" required>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col input-div one ">
                            <div class="i">
                                <i class="fas fa-envelope"></i>
                            </div>

                            <div class="div">
                                <h5>Email Address</h5>
                                <input asp-for="Email" class="input">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col input-div one me-2">
                            <div class="i">
                                <i class="fas fa-user"></i>
                            </div>

                            <div class="div">
                                <h5>Username</h5>
                                <input asp-for="Username" class="input">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col ">


                            <div class="div mt-3">

                                <input asp-for="Photo" class="form-control" required>
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col input-div one me-2">
                            <div class="i">
                                <i class="fas fa-lock"></i>
                            </div>

                            <div class="div">
                                <h5>Password</h5>
                                <input asp-for="Password" class="input">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col input-div one ">
                            <div class="i">
                                <i class="fas fa-lock"></i>
                            </div>

                            <div class="div">
                                <h5>Confirm Password</h5>
                                <input asp-for="ConfirmPassword" class="input">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">

                        <div class="col">
                            <select class="form-select" asp-for="UserType">
                                <option value="" selected>Select an User Type</option>
                                <option value="1">Client</option>
                                <option value="2">Agent</option>
                            </select>
                            <span asp-validation-for="UserType" class="text-danger"></span>
                        </div>

                    </div>


                </div>
            	
            	<input type="submit" class="btn btn-block text-white" value="Login">
            </form>
        </div>
    </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.mask.min.js"></script>
<script>
    $(document).ready(() => {

        $("#Phone").mask("+1 000 000 0000");

    });

</script>