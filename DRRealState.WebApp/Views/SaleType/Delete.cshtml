@{
    @using DRRealState.Core.Application.ViewModel.SaleType
    @model SaveSaleTypeViewModel
    ViewData["Title"] = "Ventas";
}

<div class="row mt-3">

    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-white text-center">
                <h4 class="text-white">¿Are you sure that you want delete: @Model.Name?</h4>
            </div>
            <div class="card-body">
                <span class="card-text">If you delete this sale type all estates in the website with this type are delete too.</span>
                <form method="post" asp-controller="SaleType" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-controller="SaleType" asp-action="Index" class="btn btn-warning">Cancel</a>
                    </div>
                  

                </form>

            </div>
        </div>
    </div>

</div>