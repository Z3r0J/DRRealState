
@using DRRealState.Core.Application.ViewModel.SaleType
@model SaveSaleTypeViewModel
@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Guardar Ventas";
}

<div class="container-fluid mt-5">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header  text-white bg-dark text-center">
                    <h4 class="text-white">@(editMode ? $"Edit Sale Type: {Model.Name}" : "New Sale Type")</h4>
                </div>
                <div class="card-body d-flex justify-content-center">

                    <form method="post"  asp-controller="SaleType" asp-action="@(editMode ? "Edit":"Form")">

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name: </label>
                            <input type="text" asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description: </label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>


                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-controller="SaleType" asp-action="Index" class="btn btn-warning">Back</a>

                    </form>

                </div>

            </div>
        </div>
    </div>

</div>

