@{
    @using DRRealState.Core.Application.ViewModel.Upgrade
    @ViewData["Title"] = "Upgrade";
    @model SaveUpgradeViewModel
}

<div class="row">

    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-white text-center">
                <h4>Esta seguro que desea eliminar: @Model.Name?</h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Upgrade" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-controller="Upgrade" asp-action="Index" class="btn btn-warning">Cancel</a>
                    </div>
                  

                </form>

            </div>
        </div>
    </div>

</div>